<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/resultTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Time : 20" />

    <TextView
        android:id="@+id/resultTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLyt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Result : 0" />

    <GridLayout
        android:id="@+id/gridLyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/otterImage1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cuteotter"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="increaseScore"/>
        <ImageView
            android:id="@+id/otterImage2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cuteotter"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="increaseScore"/>
        <ImageView
            android:id="@+id/otterImage3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cuteotter"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="increaseScore"/>
        <ImageView
            android:id="@+id/otterImage4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cuteotter"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="increaseScore"/>
        <ImageView
            android:id="@+id/otterImage5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cuteotter"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="increaseScore"/>
        <ImageView
            android:id="@+id/otterImage6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cuteotter"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="increaseScore"/>
        <ImageView
            android:id="@+id/otterImage7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cuteotter"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="increaseScore"/>
        <ImageView
            android:id="@+id/otterImage8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cuteotter"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="increaseScore"/>
        <ImageView
            android:id="@+id/otterImage9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cuteotter"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="increaseScore"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>